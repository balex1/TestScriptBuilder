#: kivy 1.9.0

<TestScriptOptionsPopup>
	current_client: current_client
	load_client: load_client
	new_client: new_client
	current_project: current_project
	load_project: load_project
	new_project: new_project
	current_testscript: current_testscript
	load_testscript: load_testscript
	new_testscript: new_testscript
	BoxLayout:
		orientation: 'vertical'
		size_hint: 1, 1
		Label:
			id: current_client
			size_hint: 1, 0.1
		GridLayout:
			cols: 2
			size_hint: 1, 0.1
			Label:
				text: 'Load Client'
			Spinner:
				id: load_client
				on_text: app.UpdateProjectAndTestScript(self, args[0])
		TextInput:
			size_hint: 1, 0.1
			hint_text: 'New Client'
			id: new_client
		Label:
			id: current_project
			size_hint: 1, 0.1
		GridLayout:
			cols: 2
			size_hint: 1, 0.1
			Label:
				text: 'Load Project'
			Spinner:
				id: load_project
				on_text: app.UpdateTestScript(self, args[0])
		TextInput:
			size_hint: 1, 0.1
			hint_text: 'New Project'
			id: new_project
		Label:
			id: current_testscript
			size_hint: 1, 0.1
		GridLayout:
			cols: 2
			size_hint: 1, 0.1
			Label:
				text: 'Load Testscript'
			Spinner:
				id: load_testscript
		TextInput:
			size_hint: 1, 0.1
			hint_text: 'New Testscript'
			id: new_testscript
		Button:
			text: 'Save'
			size_hint: 1, 0.1
			on_press: app.SaveTestScriptPopup(self, args[0])