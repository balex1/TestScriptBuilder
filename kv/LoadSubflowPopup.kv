#: kivy 1.9.0
			
<LoadSubflowPopup>
	new_name: new_name
	spinner: loadflowpopup_flow
	lwp_testscript: lwp_testscript
	lwp_client: lwp_client
	lwp_project: lwp_project
	BoxLayout:
		orientation: 'vertical'
		size_hint: 1, 1
		TextInput:
			size_hint: 1, 0.2
			hint_text: 'Subflow Name'
			id: new_name
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, 0.3
			Label:
				text: 'Filter Values'
			GridLayout:
				size_hint: 0.5, 1
				rows: 2
				Label:
					text: 'Client'
				Spinner:
					on_text: app.ApplyLoadWorkflowPopupFilter(self, args[0])
					id: lwp_client
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, 0.3
			GridLayout:
				size_hint: 0.5, 1
				rows: 2
				Label:
					text: 'Project'
				Spinner:
					on_text: app.ApplyLoadWorkflowPopupFilter(self, args[0])
					id: lwp_project
			GridLayout:
				size_hint: 0.5, 1
				rows: 2
				Label:
					text: 'Test Script'
				Spinner:
					on_text: app.ApplyLoadWorkflowPopupFilter_Script(self, args[0])
					id: lwp_testscript
		GridLayout:
			cols: 2
			size_hint: 1, 0.4
			Spinner:
				text: 'Flow'
				id: loadflowpopup_flow
			Button:
				text: 'Add'
				on_press: app.LoadSubflow(self, args[0])
				size_hint: 1, 0.1